[include]
    path = ~/.gitconfig.local
[core]
    excludesfile = ~/.gitignore
    editor = nvim
    pager = delta
[pull]
    rebase = true
[alias]
    co = checkout
    s = status --short --branch
    st = stash
    b = branch -a
    cm = commit
    cma = commit -a
    d = diff -C --stat -p
    dc = diff --cached
    l = log --graph --date=short --decorate=short --pretty=format:'%C(red)%h　%C(reset)-%C(yellow)%d %Creset%s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
    ll = log --graph --all --abbrev-commit --date=relative --pretty=format:'%C(red)%h　%C(reset)-%C(yellow)%d %Creset%s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
    o = open
    om = open origin main
    od = open origin develop
[fetch]
    prune = true
[push]
    default = current
    autoSetupRemote = true
[rebase]
    autoStash = true
[merge]
	conflictstyle = diff3
[rerere]
    enabled = true
[diff]
    algorithm = histogram
    colorMoved = default
[branch]
    sort = -committerdate
[column]
    ui = auto
[delta]
    navigate = true
    dark = true
    side-by-side = true
[commit]
    verbose = true
[url "git@github.com:"]
    insteadOf = https://github.com/
